<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" type="image/ico" href="{{ plugin_path('PlentyPluginShowcase') }}/img/favicon.png">

            <title>plentymarkets plugin showcase</title>

        <link href="{{ plugin_path('PlentyPluginShowcase') }}/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/prettify/r298/prettify.min.css" rel="stylesheet">
        <link href="{{ plugin_path('PlentyPluginShowcase') }}/css/main.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Source+Code+Pro|Source+Sans+Pro:400,600,700">

        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>

        <![endif]-->

    </head>
    {% block BodyStart %}
    <body>
    {% endblock %}
    
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ url() }}">Showcase</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="{{ url() }}/basics">Getting started</a>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" href="#">
                                Modules
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="{{ url() }}/categories">Category</a>
                                </li>
                                <li>
                                    <a href="{{ url() }}/items">Item</a>
                                </li>
                                <li>
                                    <a href="{{ url() }}/basket">Basket</a>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" href="#">
                                REST
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                {% include 'PlentyPluginShowcase::rest.ShowcaseNavigation' %}
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        {% block MainFrame %}
        {% endblock %}



        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="{{ plugin_path('PlentyPluginShowcase') }}/js/bootstrap.min.js"></script>
        <script src="{{ plugin_path('PlentyPluginShowcase') }}/js/scripts.js"></script>

        {% block AdditionalScripts %}
        {% endblock %}

    </body>
</html>
